
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h2>Departamento</h2>
        </div>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h5> Selecione el boton de "+" para añadir un nuevo producto, el boton amarillo para actualizar un producto, y el boton rojo para eliminer a un producto</h5>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p class="text-right">@Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr class="text-center">
                        <td>Editar</td>
                        <td class="hidden">IdDepartamento</td>
                        <td>Nombre</td>
                        <td>Id Area</td>
                        <td>Area</td>
                        <td>Eliminar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Departamento departamento in Model.Departamentos)
                    {
                        <tr class="text-center">
                            <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Departamento", new { IdDepartamento=departamento.IdDepartamento})"></a></td>
                            <td class="hidden">@departamento.IdDepartamento </td>
                            <td>@departamento.Nombre</td>
                            <td class="hidden">@departamento.Area.IdArea</td>
                            <td>@departamento.Area.Nombre</td>
                            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { IdDepartamento = departamento.IdDepartamento })" onclick="return confirm('Estas seguro que deseas eliminer este registro?')"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
          </div>
     </div>
</div>


